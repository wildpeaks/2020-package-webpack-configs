{
  "private": true,
  "description": "Webpack 4 base config generator for Web apps",
  "author": "Cecile Muller",
  "license": "MIT",
  "eslintConfig": {
    "extends": "@wildpeaks/commonjs"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": true,
    "bracketSpacing": false,
    "trailingComma": "none"
  },
  "scripts": {
    "test:lint": "eslint packages",
    "test:setup": "node test/setup.js",
    "test:params": "mocha test/params/*.spec.js",
    "test:node": "mocha test/node/*.spec.js",
    "test:web": "mocha test/web/*.spec.js"
  },
  "dependencies": {
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "6.4.0",
    "core-js": "3.8.1",
    "css-loader": "5.0.1",
    "cssnano": "4.1.10",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "4.5.0",
    "html-webpack-tags-plugin": "2.0.17",
    "loader-utils": "2.0.0",
    "mini-css-extract-plugin": "1.3.2",
    "node-sass": "5.0.0",
    "postcss-loader": "4.1.0",
    "postcss-preset-env": "6.7.0",
    "raw-loader": "4.0.2",
    "sass-loader": "10.1.0",
    "source-map-loader": "1.1.3",
    "style-loader": "2.0.0",
    "ts-loader": "8.0.11",
    "url-loader": "4.1.1",
    "webpack-subresource-integrity": "1.5.2",
    "worker-loader": "3.0.6"
  },
  "devDependencies": {
    "@types/node": "14.14.12",
    "@wildpeaks/eslint-config-commonjs": "10.7.0",
    "@wildpeaks/snapshot-dom": "2.0.0",
    "eslint": "7.15.0",
    "express": "4.17.1",
    "fs-extra": "9.0.1",
    "mocha": "8.2.1",
    "playwright": "1.6.2",
    "prettier": "2.2.1",
    "recursive-readdir": "2.2.2",
    "typescript": "4.1.2",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12"
  }
}
