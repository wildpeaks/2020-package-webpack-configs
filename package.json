{
  "private": true,
  "description": "Webpack 4 base config generator for Web apps",
  "author": "Cecile Muller",
  "license": "MIT",
  "eslintConfig": {
    "extends": "@wildpeaks/commonjs"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": true,
    "bracketSpacing": false,
    "trailingComma": "none"
  },
  "scripts": {
    "test:lint": "eslint packages",
    "test:setup": "node test/setup.js",
    "test:params": "mocha test/params/*.spec.js",
    "test:node": "mocha test/node/*.spec.js",
    "test:web": "mocha test/web/*.spec.js"
  },
  "dependencies": {
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "6.0.1",
    "core-js": "3.6.5",
    "css-loader": "3.5.3",
    "cssnano": "4.1.10",
    "file-loader": "6.0.0",
    "html-webpack-plugin": "4.3.0",
    "html-webpack-tags-plugin": "2.0.17",
    "loader-utils": "2.0.0",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "4.14.1",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "6.7.0",
    "raw-loader": "4.0.1",
    "sass-loader": "8.0.2",
    "source-map-loader": "0.2.4",
    "style-loader": "1.2.1",
    "ts-loader": "7.0.4",
    "url-loader": "4.1.0",
    "webpack-subresource-integrity": "1.4.1",
    "worker-loader": "2.0.0"
  },
  "devDependencies": {
    "@types/node": "14.0.5",
    "@wildpeaks/eslint-config-commonjs": "10.0.0",
    "@wildpeaks/snapshot-dom": "2.0.0",
    "eslint": "7.0.0",
    "express": "4.17.1",
    "fs-extra": "9.0.0",
    "mocha": "7.1.2",
    "prettier": "2.0.5",
    "puppeteer": "3.1.0",
    "recursive-readdir": "2.2.2",
    "typescript": "3.9.3",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11"
  }
}
