{
  "private": true,
  "description": "Webpack 4 base config generator for Web apps",
  "author": "Cecile Muller",
  "license": "MIT",
  "eslintConfig": {
    "extends": "@wildpeaks/commonjs"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": true,
    "bracketSpacing": false
  },
  "greenkeeper": {
    "commitMessages": {
      "dependencyUpdate": "feat: update ${dependency}",
      "devDependencyUpdate": "chore: update ${dependency}"
    }
  },
  "scripts": {
    "test:lint": "eslint packages",
    "test:params": "mocha --exit test/params-*.spec.js",
    "test:assets": "mocha --exit test/fixtures-assets.spec.js",
    "test:clean": "mocha --exit test/fixtures-clean.spec.js",
    "test:core": "mocha --exit test/fixtures-core.spec.js",
    "test:css": "mocha --exit test/fixtures-css.spec.js",
    "test:optimize": "mocha --exit test/fixtures-optimize.spec.js",
    "test:webworkers": "mocha --exit test/fixtures-webworkers.spec.js"
  },
  "dependencies": {
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "5.1.1",
    "core-js": "3.6.0",
    "css-loader": "3.4.0",
    "cssnano": "4.1.10",
    "file-loader": "5.0.2",
    "html-webpack-plugin": "3.2.0",
    "html-webpack-tags-plugin": "2.0.17",
    "loader-utils": "1.2.3",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "4.13.0",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "6.7.0",
    "raw-loader": "4.0.0",
    "sass-loader": "8.0.0",
    "source-map-loader": "0.2.4",
    "style-loader": "1.1.1",
    "ts-loader": "6.2.1",
    "url-loader": "3.0.0",
    "webpack-subresource-integrity": "1.3.4",
    "worker-loader": "2.0.0"
  },
  "devDependencies": {
    "@types/node": "12.12.17",
    "@wildpeaks/eslint-config-commonjs": "8.0.0-alpha6",
    "eslint": "6.7.2",
    "express": "4.17.1",
    "fs-extra": "8.1.0",
    "mocha": "6.2.2",
    "prettier": "1.19.1",
    "puppeteer": "2.0.0",
    "recursive-readdir": "2.2.2",
    "typescript": "3.7.3",
    "webpack": "4.41.2"
  }
}
