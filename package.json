{
  "private": true,
  "description": "Webpack 4 base config generator for Web apps",
  "author": "Cecile Muller",
  "license": "MIT",
  "eslintConfig": {
    "extends": "@wildpeaks/commonjs"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": true,
    "bracketSpacing": false
  },
  "greenkeeper": {
    "commitMessages": {
      "dependencyUpdate": "feat: update ${dependency}",
      "devDependencyUpdate": "chore: update ${dependency}"
    }
  },
  "scripts": {
    "test:lint": "eslint packages",
    "test:setup": "node test/setup.js",
    "test:params": "mocha test/params/*.spec.js",
    "test:node": "mocha test/node/*.spec.js",
    "test:web": "mocha test/web/*.spec.js"
  },
  "dependencies": {
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "5.1.1",
    "core-js": "3.6.4",
    "css-loader": "3.4.2",
    "cssnano": "4.1.10",
    "file-loader": "5.0.2",
    "html-webpack-plugin": "3.2.0",
    "html-webpack-tags-plugin": "2.0.17",
    "loader-utils": "1.3.0",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "4.13.1",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "6.7.0",
    "raw-loader": "4.0.0",
    "sass-loader": "8.0.2",
    "source-map-loader": "0.2.4",
    "style-loader": "1.1.3",
    "ts-loader": "6.2.1",
    "url-loader": "3.0.0",
    "webpack-subresource-integrity": "1.4.0",
    "worker-loader": "2.0.0"
  },
  "devDependencies": {
    "@types/node": "13.7.2",
    "@wildpeaks/eslint-config-commonjs": "8.1.0",
    "@wildpeaks/snapshot-dom": "1.6.0",
    "eslint": "6.8.0",
    "express": "4.17.1",
    "fs-extra": "8.1.0",
    "mocha": "7.0.1",
    "prettier": "1.19.1",
    "puppeteer": "2.1.1",
    "recursive-readdir": "2.2.2",
    "typescript": "3.7.5",
    "webpack": "4.41.6",
    "webpack-cli": "3.3.11"
  }
}
